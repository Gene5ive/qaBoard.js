<div class ="container">
  <h1 class="page-header text-center">Questions</h1>
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
      <ul>
        {{#each question in model itemController="question"}}
          <li>{{#link-to 'question' question}}{{question.author}} || {{question.question}}{{/link-to}}</li>
          <button class="btn btn-xs btn-danger" {{action 'delete'}}>Delete</button>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="text-center">
    {{#link-to 'new-question' class="btn btn-primary"}}New Question{{/link-to}}
  </div>
</div>

{{outlet}}

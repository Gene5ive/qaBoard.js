<h1>New Question</h1>
<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{input value=description id="description" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="question">Body</label>
    {{textarea value=question id="question" class="form-control" rows="15"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>
